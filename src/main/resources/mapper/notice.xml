		FROM (SELECT n.*
		FROM notice n
		INNER JOIN subscribe s
		ON n.company_id = s.company_id
		WHERE s.employee_id = #{employeeId}) ns
		LEFT OUTER JOIN intro_image img
		ON ns.company_id = img.company_id
		ORDER BY ns.notice_period DESC
	</select>

